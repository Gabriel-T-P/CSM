<div class="min-h-screen flex items-center justify-center py-10 bg-gray-100">
  <div class="w-full max-w-md p-8 bg-white shadow-md">
    <%= title_h2(t('.title')) %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <div>
          <%= form_email_field(f, :email, autocomplete: "email", autofocus: true) %>
        </div>

        <div>
          <%= form_password_field(f, :password, autocomplete: "current-password") %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "border-gray-800 border-2 rounded-none focus:ring-gray-800" %>
            <%= f.label :remember_me, class: "text-sm text-gray-800 font-medium" %>
          </div>
        <% end %>

        <div class="actions pt-1">
          <%= form_submit_button(t('.save')) %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
