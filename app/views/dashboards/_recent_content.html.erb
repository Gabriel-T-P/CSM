<section class="mb-20">
  <div class="flex items-center justify-between mb-6 border-b-2 border-gray-700 pb-2">
    <h2 class="text-2xl font-semibold text-gray-800">
      <%= t('.recent_content') %>
    </h2>

    <%= link_to user_contents_path(current_user),
                class: "flex items-center gap-2 text-sm border-2 border-gray-800 text-gray-800 hover:border-gray-500 hover:text-gray-500 px-4 py-1 transition rounded-none" do %>
      <span><%= t('.see_all', default: 'See All') %></span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
          viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>

  <% if current_user.contents.any? %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% current_user.contents.order(created_at: :desc).limit(4).each do |content| %>
        <%= link_to content_path(content), class: "block group transition-transform duration-200 ease-in-out hover:scale-[1.015]" do %>
          <div class="border-2 border-gray-800 hover:border-gray-500 rounded-none bg-white overflow-hidden shadow-sm group-hover:shadow-md transition duration-200">
            <% if content.cover.attached? %>
              <%= image_tag url_for(content.cover), class: "w-full h-32 object-cover" %>
            <% else %>
              <%= image_tag "default_avatar.png", class: "w-full h-32 object-cover" %>
            <% end %>

            <div class="p-3 space-y-1">
              <p class="text-sm font-semibold text-gray-900 truncate">
                <%= content.title %>
              </p>
              <p class="text-xs text-gray-600 truncate">
                <%= content.user.username %>
              </p>
              <p class="text-xs text-gray-500">
                <%= time_ago_in_words(content.created_at) %> <%= t('.ago') %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-10">
      <p class="text-gray-600 text-lg">
        <%= t('.no_content_found_yet') %>
      </p>
    </div>
  <% end %>
</section>