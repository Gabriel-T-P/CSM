<nav class="w-full bg-gray-100 text-white border-b-2 border-gray-700 px-4 py-3 flex items-center justify-between">
  <!-- Logo / App Name -->
  <div class="text-xl text-gray-800 font-semibold tracking-wide">
    <%= link_to 'CSM', root_path, class: "mx-10" %>
  </div>

  <!-- Right side buttons -->
  <div class="flex items-center gap-4">
    
    <!-- Authenticated User -->
    <% if user_signed_in? %>
      <span class="px-4 py-1 font-medium text-gray-800 hover:text-gray-400 transition">
        <%= current_user.username.upcase %>
      </span>

      <%= button_to t('.log_out').upcase, destroy_user_session_path,method: :delete,
          class: "px-4 py-2 mr-4 font-medium text-gray-800 border-2 border-red-800 rounded-none hover:border-red-400 hover:text-red-400 transition bg-transparent" %>

      <!-- Not Authenticated User -->
    <% else %>
      <span class="px-4 py-1 font-medium text-gray-800 hover:text-gray-400 transition">
        TEST
      </span>

      <%= link_to t('.log_in').upcase, new_user_session_path,
          class: "px-4 py-2 mr-4 font-medium text-gray-800 border-2 border-gray-800 rounded-none hover:border-gray-400 hover:text-gray-400 transition bg-transparent" %>
    <% end %>
  </div>
</nav>
