<nav class="w-full bg-gray-100 text-white border-b-2 border-gray-700 px-4 py-3 flex items-center justify-between">
  <!-- Logo / App Name -->
  <div class="text-xl text-gray-800 font-semibold tracking-wide">
    <%= link_to 'CSM', root_path, class: "mx-10" %>
  </div>

  <!-- Right side buttons -->
  <div class="flex items-center gap-4">
    <%= render 'shared/navbar/language_button' %>

    <!-- Authenticated User -->
    <% if user_signed_in? %>
      <%= link_to user_dashboard_path(current_user), class: 'mx-2 pt-1 text-gray-800 hover:text-gray-400 transition bg-transparent rounded-none focus:outline-none test-dashboard-btn' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
          <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
          <path d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z" />
        </svg>

      <% end %>
      
      <!-- Admin User -->
      <% if current_user.admin? %>
        <%= render 'shared/navbar/admin_button' %>
      <% end %>
      <!-- End Admin User -->

      <%= render 'shared/navbar/user_button' %>
      <%= render 'shared/navbar/user_avatar' %>

    <!-- Not Authenticated User -->
    <% else %>
      <span class="px-4 py-1 font-medium text-gray-800 hover:text-gray-400 transition">
        GUEST
      </span>

      <%= outline_link_to(t('.log_in').upcase, new_user_session_path) %>
    <% end %>
  </div>
</nav>
