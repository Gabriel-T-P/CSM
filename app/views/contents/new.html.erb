<div class="min-h-screen flex items-center justify-center py-10 bg-gray-100">
  <div class="w-full max-w-3xl p-10 bg-white shadow-md rounded-md border border-gray-200">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6"><%= t('.title') %></h2>

    <%= form_with model: [@user, @content], local: true do |f| %>
      <div class="space-y-6">

        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="border border-gray-300 rounded-md">
            <%= f.rich_text_area :body, class: "w-full trix-content px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", style: "min-height: 250px;" %>
          </div>
        </div>

        <div>
          <%= f.label :visibility, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :visibility, [["Private", :only_me], ["Public", :visible_to_all], ["Unlisted", :unlisted]],
              {}, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="pt-4">
          <%= f.submit t('.save'), class: "w-full bg-gray-800 hover:bg-gray-900 text-white font-semibold py-3 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
