<table class="w-full border-2 border-gray-700 text-sm">
    <thead class="bg-white text-gray-700">
      <tr>
        <th class="p-3 border border-gray-300 text-left font-medium">Título</th>
        <th class="p-3 border border-gray-300 text-left font-medium">Início</th>
        <th class="p-3 border border-gray-300 text-left font-medium">Fim</th>
        <th class="p-3 border border-gray-300 text-center font-medium">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% announcements.each do |announcement| %>
        <tr class="hover:bg-gray-100">
          <td class="p-3 border border-gray-300"><%= announcement.title %></td>
          <td class="p-3 border border-gray-300">
            <%= l(announcement.start_at, format: :short) if announcement.start_at %>
          </td>
          <td class="p-3 border border-gray-300">
            <%= l(announcement.end_at, format: :short) if announcement.end_at %>
          </td>
          <td class="p-3 border border-gray-300 text-center space-x-2">
            <%= link_to "Edit", root_path,
                  class: "text-yellow-600 hover:underline" %>
            <%= link_to "Delete", root_path,
                  class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>