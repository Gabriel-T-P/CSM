<h1 class="text-2xl font-bold mb-4">New Announcement</h1>

<div class="max-w-4xl mx-auto mt-8">
  <%= turbo_frame_tag "announcement_form" do %>
    <div class="flex justify-between items-center mb-4">
      <p class="text-gray-600">Gerencie os anúncios visíveis aos usuários do sistema.</p>

      <%= link_to "Add New Announcement",
                  new_admin_announcement_path,
                  class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md test-add-announcement-btn" %>
    </div>
  <% end %>

  <%= render 'announcements_table', announcements: @announcements %>
</div>
